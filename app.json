{
  "expo": {
    "name": "Qurany",
    "slug": "An_app_for_Muslims_to_recite_and_memorize_Quran",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-screen.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff",
      "plugins": [
        [
          "expo-av",
          {
            "microphonePermission": "Allow Qurany App to access your microphone."
          }
        ],
        [
          "@react-native-voice/voice",
          {
            "microphonePermission": "Allow Qurany App to access your microphone.",
            "speechRecognitionPermission": "Allow Qurany App to securely recognize your speech."
          }
        ]
      ]
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}