{
  "expo": {
    "name": "Qurany",
    "slug": "qurany",
    "description": "An app for Muslims to recite and memorize Quran",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-screen.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff",
      "plugins": [
        [
          "expo-av",
          {
            "microphonePermission": "Allow Qurany App to access your microphone."
          }
        ],
        [
          "@react-native-voice/voice",
          {
            "microphonePermission": "Allow Qurany App to access your microphone.",
            "speechRecognitionPermission": "Allow Qurany App to securely recognize your speech."
          }
        ]
      ]
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mohamed7genius.qurany"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.mohamed7genius.qurany"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "fa55a47d-644a-47a9-a614-91cd8a91f4df"
      }
    }
  }
}
